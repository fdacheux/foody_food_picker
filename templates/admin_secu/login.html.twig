{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block myTitle %}Login :{% endblock %}

{% block body %}
<div class="mx-2 my-2">
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <form action="{{path('login')}}" method="post">
        <div class="form-group">
            <label for="login">Login : </label>
            <input type="text" required id="login" name="_username" class="form-control" value={{ last_username }}>
        </div>
        <div class="form-group">
            <label for="password">Password : </label>
            <input type="password" required id="password" name="_password" class="form-control">
        </div>
        <input type="submit" class="my-2 btn btn-primary" value="Login">
    </form>
</div>
{% endblock %}
